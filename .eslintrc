{
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "semi": [2, "never"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "no-extra-parens": ["error", "all"],
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "no-multi-spaces": "error",
    "sort-keys": ["error", "asc", { "minKeys": 5 }]
  }
}
